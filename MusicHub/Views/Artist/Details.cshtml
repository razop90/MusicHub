@model MusicHub.Models.LocalModels.ArtistModel

@{
    ViewData["Title"] = "Details";
}

<style>
    #myCanvas {
        border: 0px solid #d3d3d3;
        border-radius: 0px 102px;
        width: 100%;
    }
    a:hover {
        text-decoration-line: none;
    }
</style>

<div>
    <h1>@Html.DisplayFor(model => model.FullName)</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.ID" title="edit artist"><span class="glyphicon glyphicon-pencil" /></a>        
    </div>
    <canvas id="myCanvas" height="3"></canvas>
    <table class="table">
        <tr>
            <th>Song Title</th>
            <th>Genre</th>
        </tr>
        <!-- iterate for each song of the artist -->
        @foreach (var song in Model.Songs)
        {<!-- Add table row with song name and genere -->
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => song.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => song.Genre)
                </td>
                <td>
                    <a asp-controller="Song" asp-action="Details" asp-route-id="@song.ID">Details</a>
                </td>
            </tr>
        }
    </table>
</div>
<script type="text/javascript">
var c = document.getElementById("myCanvas");
var ctx = c.getContext("2d");

    // Create gradient
    var grd = ctx.createLinearGradient(0, 0, 200, 3);
    grd.addColorStop(0, "DeepSkyBlue ");
    grd.addColorStop(1, "white");

    // Fill with gradient
    ctx.fillStyle = grd;
    ctx.fillRect(0, 0, 200, 3);
</script>
