@model MusicHub.Models.LocalModels.ArtistModel

@{
    ViewData["Title"] = "Create";
}

<style>
    /* Enlarge input fields on focus with 1 second delay */
    .form-control:focus {
        -webkit-transform: scale(1.03);
        -webkit-transition: all 1s ease-in-out;

        -ms-transform: scale(1.03);
        
        transform: scale(1.03);
        
        -moz-transition: all 1s ease-in-out;
        -o-transition: all 1s ease-in-out;
        transition: all 1s ease-in-out;
    }
</style>

<h2>Create Artist</h2>
<a asp-action="Index">Back to Artists</a>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <table class="table table-responsive">
                        <thead><h4>Select artists songs</h4></thead>
                        <tr>
                            @{
                                int cnt = 0;
                                List<MusicHub.Models.ArtistViewModels.AssignedSongData> songs = ViewBag.Songs;

                                foreach (var song in songs)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                               name="selectedSongs"
                                               value="@song.SongID"
                                               @(Html.Raw(song.Assigned ? "checked=\"checked\"" : "")) />
                                        @song.Title
                                    @:</td>
                                }
                            @:</tr>
                            }
                        </table>
                    </div>
            </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
